<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%= render 'layouts/stylesheets' %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tag %>
  </head>
  <body>
   	<%= render 'layouts/header' %>
		
	<div class="hero-unit">      
		        <% flash.each do |key, value| %>
		          <div class="flash <%= key %>"><%= value %></div>
		        <% end %>
		        <%= yield %>
	</div>	      
	<%= render 'layouts/footer' %>
	<%= debug(params) if Rails.env.development? %>

	
  </body>
</html>