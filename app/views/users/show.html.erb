<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span5">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
	<section>
        <%= render 'shared/stats' %>
      </section>
	<section>
		
		<%= render 'follow_form' if signed_in? %>
		<% if current_user == @user %>
		     <%= link_to "Change Profile Settings", edit_user_path(current_user), :class => "btn" %></li>
		<% end %>
		</section>
	<section>
		<% if @user.typeof == "Creator"%>
			<%= link_to "Create A New Trail", new_trail_path, :class => "btn"%>
		<% end %>
		<% if @user.typeof == "Studio"%>
			<%= link_to "Create A New Trail", new_trail_path, :class => "btn"%>
		<% end %>
		</section>
		<section>
		<h6> Your Trails: <%= @user.trails.count %> </h6><br>
		<%= render 'shared/trails' %>
	</section>


  </aside>

	<div class="span5 offset2">
    	<% if @user.microposts.any? %>
      	<h3>Microposts (<%= @user.microposts.count %>)</h3>
     	<ol class="microposts">
        	<%= render @microposts %>
      	</ol>
      	<div class"pageinate"<%= paginate @microposts%></div>
    	<% end %>
  	</div>
</div>
